# Docker Environment Variables
# Скопируйте этот файл в .env и измените значения

# PostgreSQL Configuration
POSTGRES_PASSWORD=renessans_secure_password_2026_CHANGE_THIS

# JWT Configuration (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
JWT_SECRET_KEY=change-this-to-a-very-secure-secret-key-minimum-32-characters-long-for-production-use

# Email Configuration (опционально)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_SSL=true
EMAIL_FROM=your-email@gmail.com

# pgAdmin Configuration (опционально)
PGADMIN_EMAIL=admin@renessans.uz
PGADMIN_PASSWORD=admin_password_CHANGE_THIS

# Application Environment
ASPNETCORE_ENVIRONMENT=Production

# Примечание:
# Для production обязательно измените:
# - POSTGRES_PASSWORD (пароль базы данных)
# - JWT_SECRET_KEY (минимум 32 символа)
# - PGADMIN_PASSWORD (если используете pgAdmin)
